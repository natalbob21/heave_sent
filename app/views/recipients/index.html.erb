
<div class="center">
<h1>My Recipients</h1>
 
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @recipients.each do |recipient| %>
      <tr>
        <td><%= recipient.name %></td>
        <td><%= recipient.phone %></td>
        <td><%= link_to "View", recipient %></td>
        <td><%= link_to "Edit", edit_recipient_path(recipient) %></td>
        <td><%= link_to "Delete", recipient, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 
<br> 
<%= link_to "New Recipient", new_recipient_path %>
</div>
