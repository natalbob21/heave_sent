<div class="postcard">
  <div class="post">
    <h1>
      <%= @event.title %>
    </h1>
    <p>
      <%= @event.description %>
    </p>
    <% if @event.message.attached? %>

      <p>
        <strong>Message:</strong>
        <br>
        <%= image_tag @event.message, height: 420, width: 580 %>
      </p>

    <% end %>

    <% if @event.video.present? %>
    <%= video_tag @event.video_url.to_s, controls: true  %>
    <% end %>


    <h3>Your message will be sent to <%= link_to @event.recipient.name, @event.recipient %> on <%= @event.send_date %></h3>
    <%= link_to "Back", root_path %>
    <%= link_to "Edit", edit_event_path %>
    <%= link_to "Delete", event_path, method: :delete, data: { confirm: "Are you sure?" } %>


  </div>
</div>
