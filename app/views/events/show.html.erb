<h1>
  <%= @event.title %>
</h1>
<p>
  <%= @event.description %>
</p>
<% if @event.message.attached? %>
  <p>
    <strong>Message:</strong>
    <br>
    <%= image_tag @event.message %>
  </p>
<% end %>


<%= video_tag @event.video_url.to_s, controls: true  %>


<h2>You have successfully created an Event<br>Your message will be sent to <%= link_to @event.recipient.name, @event.recipient %> on <%= @event.send_date %></h2>

<tr>
  <td><%= @event.id %></td><br>
  <td><%= @event.send_date %></td><br>
  <td><%= @event.created_at %></td><br>
  <td>
    <%= link_to "Back", root_path %>
    <%= link_to "Edit", edit_event_path %>
    <%= link_to "Delete", event_path, method: :delete, data: { confirm: "Are you sure?" } %>
  </td>
</tr>
