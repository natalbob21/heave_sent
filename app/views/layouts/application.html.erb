<!DOCTYPE html>
<html>
  <head>
    <title>BeyondTheGrave</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <%= favicon_link_tag asset_path('mic.png'), :rel => 'icon', :type =>  'image/png' %>
    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat|Roboto" rel="stylesheet">
    <!-- Custom fonts for this template -->
    <link href="http://blackrockdigital.github.io/startbootstrap-grayscale/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="http://blackrockdigital.github.io/startbootstrap-grayscale/css/grayscale.min.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="http://code.jquery.com/jquery-1.11.3.min.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'app-bundle' %>
  </head>

  <body>
    <div class="navbar navbar-default navbar-fixed-top">

      <%if user_signed_in?%>
        <ul class="nav navbar-nav navbar-left">
          <li class="nav-item"><%=link_to image_tag("https://static-beyond.herokuapp.com/home.png", tag: "home", width: "30", height: "30"), root_path, class: "nav-link active" %></li>
          <li class="nav-item"><%=link_to image_tag("https://static-beyond.herokuapp.com/event.png", tag: "event", width: "30", height: "30"), new_event_path, class: "nav-link" %></li>
          <li class="nav-item"><%=link_to image_tag("https://static-beyond.herokuapp.com/add_recipient.jpeg", tag: "recipient", width: "30", height: "30"), new_recipient_path, class: "nav-link" %></li>
          <li class="navbar-brand"><h1>Welcome, <%=link_to current_user.name, root_path %></h1></li>
        </ul>

        <h3>
          <ul class="nav navbar-nav navbar-right">
            </li>
            <li class="nav-item"><%=link_to "Account", edit_user_registration_path, class: "nav-link" %></li>
            <li class="nav-item"><%=link_to "Sign out", destroy_user_session_path, method: :delete, class: "nav-link" %></li>
            <li class="right"></li>
          </ul>
        </h3>

      <%else%>

        <ul class="nav navbar-nav navbar-left">
          <li class="nav-item"><%=link_to image_tag("https://static-beyond.herokuapp.com/home.png", tag: "home", width: "30", height: "30"), root_path, class: "nav-link active" %></li>
          <li class="nav-item navbar-brand"><h2><%=link_to "Beyond the Grave", root_path %></h2></li>
        </ul>
        <h3>
          <ul class="nav navbar-nav navbar-right">
            <li class="nav-item"><%=link_to "Sign up", new_user_registration_path, class: "nav-link" %></li>
            <li class="nav-item"><%=link_to "Sign in", new_user_session_path, class: "nav-link" %></li>
            <li class="right"></li>
          </ul>
        </h3>

      <%end%>

    </div>
    <div class="space">

    </div>
    <%= yield %>
  </body>
</html>
