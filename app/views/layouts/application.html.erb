<!DOCTYPE html>
<html>
  <head>
    <title>Heaven Sent</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <%= favicon_link_tag('https://static-beyond.herokuapp.com/paper_plane.jpg') %>
    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat|Roboto" rel="stylesheet">
    <!-- Custom fonts for this template -->
    <link href="http://blackrockdigital.github.io/startbootstrap-grayscale/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="http://blackrockdigital.github.io/startbootstrap-grayscale/css/grayscale.min.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="http://code.jquery.com/jquery-1.11.3.min.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'app-bundle' %>
  </head>

  <body>
    <div class="navbar navbar-default navbar-fixed-top">

      <%if user_signed_in?%>
        <h3>
        <ul class="nav navbar-nav navbar-left">
          <li class="nav-item"><%=link_to root_path, title: "HOME" do %>
          <i class="fas fa-home"></i></li>
          <%end%>
          <li class="nav-item"><%=link_to new_recipient_path, title: "ADD A NEW RECIPIENT" do %>
          <i class="fas fa-user-plus"></i></li>
          <%end%>
          <li class="nav-item"><%=link_to new_event_path, title: "CREATE A NEW MESSAGE" do %>
          <i class="fas fa-paper-plane"></i></li>
          <%end%>
          <li class="nav-item"><%=link_to recipients_path, title: "VIEW YOUR ADDRESS BOOK" do %>
          <i class="fas fa-address-book"></i></li>
          <%end%>
          <li class="navbar-brand"><h4>Welcome, <%=link_to current_user.name, events_path, title: "VIEW YOUR MESSAGE TIMELINE" %></h4></li>
        </ul>
        </h3>

        <h3>
        <ul class="nav navbar-nav navbar-right">
          <li class="right">
          <%= link_to edit_user_registration_path(@user), title: "UPDATE YOUR PROFILE INFORMATION" do %>
          <i class="fas fa-user-cog"></i></li>
          <% end %>
          <li class="right">
          <%=link_to destroy_user_session_path, method: :delete, title: "LOG OUT" do %>
          <i class="fas fa-sign-out-alt"></i></li>
          <%end%>
        </ul>
        </h3>

      <%else%>

        <h3>
        <ul class="nav navbar-nav navbar-left">
          <li class="nav-item"><%=link_to root_path, class: "nav-link active", title: "HOME" do %>
          <i class="fas fa-home"></i></li>
          <%end%>
          <li class="nav-item navbar-brand">Heaven Sent</li>
        </ul>

         <ul class="nav navbar-nav navbar-right">
          <li class="nav-item"><%=link_to "Sign up", new_user_registration_path, class: "nav-link" %></li>
          <li class="nav-item"><%=link_to new_user_session_path, class: "nav-link", title: "LOG IN" do %>
          <i class="fas fa-sign-in-alt"></i></li>
          <%end%>
          <li class="right"></li>
        </ul>
        </h3>

      <%end%>

    </div>
    <div class="space">

    </div>
    <%= yield %>
  </body>
</html>
